<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IoT_box_activity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="@string/iot_box"
        android:fontFamily="@font/roboto_bold"
        android:layout_below="@id/profile"
        android:textSize="50sp" />

    <TextView
        android:id="@+id/subtitle1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginStart="35dp"
        android:layout_marginTop="30dp"
        android:text="@string/battery_percentage"
        android:fontFamily="@font/roboto_medium"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/subtitle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/subtitle1"
        android:text="@string/_55"
        android:fontFamily="@font/roboto_medium"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/lidON"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitle1"
        android:layout_marginStart="45dp"
        android:layout_marginTop="30dp"
        android:text="@string/lid_on"
        android:fontFamily="@font/roboto_medium"
        android:textSize="30sp" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switchlid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/lidON"
        android:layout_marginStart="60dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@id/lidON"
        android:scaleX="2"
        android:scaleY="2"
        android:scrollbarSize="50dp" />

    <TextView
        android:id="@+id/lidtextright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subtitle2"
        android:layout_marginStart="45dp"
        android:layout_marginTop="30dp"
        android:layout_toEndOf="@id/switchlid"
        android:text="@string/lid_off"
        android:fontFamily="@font/roboto_medium"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/boxtemp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/lidON"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/box_temperature"
        android:fontFamily="@font/roboto_medium"
        android:textSize="40sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_verified_user_24"
        android:scaleX="3"
        android:scaleY="3"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="125dp"
        android:layout_below="@id/esttime"
        android:fontFamily="@font/roboto_medium"
        android:visibility="visible" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_warning_24"
        android:scaleX="3"
        android:scaleY="3"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="325dp"
        android:layout_below="@id/esttime"
        android:fontFamily="@font/roboto_medium"
        android:visibility="visible" />
    <TextView
        android:id="@+id/profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_baseline_account_circle_24"
        android:scaleX="4"
        android:scaleY="4"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="100sp"
        android:layout_marginTop="70sp"
        android:fontFamily="@font/roboto_medium"
        android:visibility="visible" />
    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7 c"
        android:textSize="70sp"
        android:layout_below="@id/boxtemp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_medium"
        />
    <TextView
        android:id="@+id/requiredtemp"
        android:layout_width="wrap_content"
        android:fontFamily="@font/roboto_medium"
        android:layout_height="wrap_content"
        android:text="Required Temperature"
        android:layout_below="@id/temp"
        android:textSize="30sp"
        android:layout_marginStart="35dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-2 c"
        android:textSize="30dp"
        android:layout_below="@id/temp"
        android:layout_toEndOf="@id/requiredtemp"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginLeft="25sp"/>
    <TextView
        android:id="@+id/esttime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estimated Time"
        android:layout_below="@id/requiredtemp"
        android:textSize="30sp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginLeft="35dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20 mins"
        android:layout_marginTop="25dp"
        android:textSize="30sp"
        android:layout_marginLeft="45sp"
        android:layout_below="@id/requiredtemp"
        android:fontFamily="@font/roboto_medium"
        android:layout_toEndOf="@id/esttime"/>
</RelativeLayout>



